{
  "name": "swag-labs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:login": "playwright test --grep @login",
    "test:inventory": "playwright test --grep @inventory",
    "test:checkout": "playwright test --grep @checkout",
    "test:cart": "playwright test --grep @cart",
    "test:inventory-details": "playwright test --grep @detail",
    "test:positive": "playwright test --grep @positive",
    "test:negative": "playwright test --grep @negative",
    "test:install": "playwright install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install:yarn": "yarn install",
    "clean": "yarn cache clean && rm -rf node_modules",
    "clean:install": "yarn clean && yarn install"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "sauce-demo"
  ],
  "author": "Bilyana Hristova",
  "license": "ISC",
  "description": "Playwright automation tests for Sauce Demo application",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
